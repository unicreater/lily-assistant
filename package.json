{
  "name": "lily-extension",
  "displayName": "Lily",
  "version": "0.0.1",
  "description": "Chrome side panel AI assistant powered by Claude Code CLI",
  "author": "Lily",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "mammoth": "^1.11.0",
    "pdfjs-dist": "^5.4.624",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.4.1"
  },
  "devDependencies": {
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.16",
    "postcss": "8.4.33",
    "typescript": "5.3.3"
  },
  "manifest": {
    "permissions": [
      "nativeMessaging",
      "sidePanel",
      "storage",
      "clipboardRead",
      "clipboardWrite",
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "action": {
      "default_title": "Lily"
    }
  }
}
